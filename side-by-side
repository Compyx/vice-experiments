	+autostart-delay-random \
	+warp \
	+autostart-warp \
	~/Downloads/EdgeOfDisgrace/EdgeOfDisgrace_1a.d64 &

sleep $1

#false &&
./sdl2.nosync/vice-sdl2-3.4-r37346-uncommitted-changes/bin/x64sc \
	+autostart-delay-random \
	+warp \
	+autostart-warp \
	~/Downloads/EdgeOfDisgrace/EdgeOfDisgrace_1a.d64 &

wait
